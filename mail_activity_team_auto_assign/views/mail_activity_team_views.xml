<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<!--
    VIEWS
-->

    <!-- FORM VIEW -->
    <record id="mail_activity_team_rule_view_form" model="ir.ui.view">
        <field name="name">mail.activity.team.rule.view.form</field>
        <field name="model">mail.activity.team.rule</field>
        <field name="arch" type="xml">
            <form string="Activity Team Rule">
                <sheet string="Activity Team Rule">
                    <group>
                        <group name="base">
                            <field name="active" invisible="1" />
                            <field name="team_member_ids" invisible="1" />
                            <field name="team_model_ids" invisible="1" />
                            <field name="activity_model_ids" invisible="1" />
                            <field name="name" />
                            <field
                                name="team_id"
                                options="{'no_create': True, 'no_edit': True}"
                            />
                            <field
                                name="team_member_id"
                                options="{'no_create': True, 'no_edit': True}"
                            />
                            <field
                                name="rule_model"
                                options="{'no_create': True, 'no_edit': True}"
                            />
                            <field name="rule_domain" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- TREE VIEW -->
    <record id="mail_activity_team_rule_view_tree" model="ir.ui.view">
        <field name="name">mail.activity.team.rule.view.tree</field>
        <field name="model">mail.activity.team.rule</field>
        <field name="arch" type="xml">
           <tree editable="bottom">
               <field name="team_member_ids" invisible="1" />
               <field name="team_model_ids" invisible="1" />
               <field name="activity_model_ids" invisible="1" />
               <field name="sequence" widget="handle" />
               <field name="team_id" options="{'no_create': True, 'no_edit': True}" />
               <field
                    name="team_member_id"
                    options="{'no_create': True, 'no_edit': True}"
                />
               <field
                    name="rule_model"
                    options="{'no_create': True, 'no_edit': True}"
                />
               <field name="rule_domain" />
           </tree>
        </field>
    </record>


    <!-- SEARCH VIEW -->
    <record id="mail_activity_team_rule_view_search" model="ir.ui.view">
        <field name="name">mail.activity.team.rule.view.search</field>
        <field name="model">mail.activity.team.rule</field>
        <field name="arch" type="xml">
            <search>
               <field name="team_id" />
               <field name="team_member_id" />
               <field name="rule_model" />
               <field name="rule_domain" />
            </search>
        </field>
    </record>


<!--
    ACTION
-->
    <record model="ir.actions.act_window" id="mail_activity_team_rule_action">
        <field name="name">Activity Teams Rules</field>
        <field name="res_model">mail.activity.team.rule</field>
        <field name="view_mode">tree</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="mail_activity_team_rule_view_search" />
    </record>


<!--
Menus
-->
    <menuitem
        id="menu_mail_activity_team_rule"
        name="Activity Teams Rules"
        parent="mail.mail_menu_technical"
        sequence="11"
        action="mail_activity_team_rule_action"
    />

</odoo>
